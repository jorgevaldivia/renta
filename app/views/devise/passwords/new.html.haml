%h1.form-header= t("views.devise.passwords.new.header")
= form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :post, class: "panel"}) do |f|
  = devise_error_messages!
  .form-group
    = f.email_field :email, autofocus: true, placeholder: User.human_attribute_name(:email),
      class: "form-control input-lg"
  .form-actions
    %input.btn.btn-primary.btn-block.btn-lg{type: "submit", value: t("views.devise.passwords.new.submit")}/
