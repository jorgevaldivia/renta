.sidebar-header
  %a.brand{:href => ""}
    %span.brand-figure
    %span.brand-text Propertea.
.sidebar-content
  .scroll-wrapper{:style => "position: relative; overflow: hidden; width: auto;"}
    .scroll-content{"slim-scroll" => "", :style => "overflow: hidden; width: auto;"}
      %ul.nav.nav-sidebar
        %li.nav-heading= I18n.t(:menu)

        %li.nav-group{"ng-class" => "{ active: $state.includes('default.dashboard') }"}
          %a.nav-toggle{"ui-sref" => "default.dashboard"}
            %span.figure.figure-left.icon
              %i.ai.ai-dashboard
            %span.text.ellipsis Dashboard

        %li.nav-group{"ng-class" => "{ active: $state.includes('default.properties') || $state.includes('default.leases') }"}
          %a.nav-toggle{"ui-sref" => "default.properties.index"}
            %span.figure.figure-left.icon
              %i.ai.ai-home
            %span.text.ellipsis= Property.model_name.human(count: 2)

        %li.nav-group{"ng-class" => "{ active: $state.includes('default.contacts') }"}
          %a.nav-toggle{"ui-sref" => "default.contacts.index"}
            %span.figure.figure-left.icon
              %i.ai.ai-user
            %span.text.ellipsis= Contact.model_name.human(count: 2)
    .scroll-bar{:style => "width: 6px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 7px; z-index: 99; right: 1px; height: 518px; background: rgb(0, 0, 0);"}
    .scroll-rail{:style => "width: 6px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"}
