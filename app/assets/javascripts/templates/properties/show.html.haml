.panel.ibox
  .panel-heading
    .panel-title.ibox-title
      %h4= I18n.t(:details)
  .panel-body.ibox-content
    %div{ "ng-show" => "record.object.current_lease" }
      .row
        .col-md-12
          %h5.no-margin-b.pull-left
            %strong= Property.human_attribute_name(:current_lease)
          .ibox-tools.pull-right
            %a{"ui-sref" => "default.properties.property.leases.lease.edit({lease_id: record.object.current_lease.id})"}
              %i.fa.fa-pencil

      %hr.mnr-md.mnl-md/

    %div{ "ng-hide" => "record.object.current_lease" }
      .blank-slate
        %h2
          %i.fa.fa-exclamation-circle
          No Current Lease
        %p
          %a{"ui-sref" => "default.properties.property.leases.new"} Create a lease
          to add tenants, begin collecting rent, and start tracking stats. When you create a lease, you'll be able to set start and end dates, rent, and deposit amounts.
        %p
          %a.btn.btn-primary.btn-sm.pull-right{"ui-sref" => "default.properties.property.leases.new"}
            %i.fa.fa-plus
            Add Lease
      .clearfix

    .row{ "ng-show" => "record.object.current_lease" }
      .col-md-6
        .contact-box
          .col-sm-4
            .text-center
              %img.img-circle.m-t-xs.img-responsive{alt: "image", src: "assets/demo/avatars/7.jpg"}/
          .col-sm-8{style: "padding-left: 0"}
            %strong John Smith
            %br/
            %small
              %i.fa.fa-usd
              {{ record.object.current_lease.rent | number:2 }}
            %br/
            %small
              %i.fa.fa-calendar
              {{ record.object.current_lease.start_date }} - {{ record.object.current_lease.end_date }}
            .clearfix

      .col-md-6
        .contact-box
          .col-sm-4
            .text-center
              .well.no-margin-b{style: "padding: 14px;"}
                %h2
                  %i.fa.fa-usd
          .col-sm-8{style: "padding-left: 0"}
            %strong Payments
            %br/
            %small
              %strong Next:
              06-01-2015
            %br/
            %small
              %strong Last:
              05-03-2015
              %span.label.label-warning Overdue
            .clearfix

    %br/
    .row
      .col-md-12
        %h5.no-margin-b.pull-left
          %strong= Transaction.model_name.human(count: 2)
        .ibox-tools.pull-right
          %a.close-link
            %i.fa.fa-plus

    %hr.mnr-md.mnl-md/

    %table.table.table-hover
      %thead
        %tr
          %th{style: "width: 60px;"} Type
          %th Date
          %th Amount
          %th From
      %tbody
        %tr
          %td
            %span.label.label-primary Income
          %td March 1st, 2015
          %td $18,500
          %td Jorge Valdivia
        %tr
          %td
            %span.label.label-warning Expense
          %td March 1st, 2015
          %td $3,600
          %td Mantenimiento
        %tr
          %td
            %span.label.label-primary Income
          %td Feb 1st, 2015
          %td $18,500
          %td Jorge Valdivia
        %tr
          %td
            %span.label.label-warning Expense
          %td Feb 1st, 2015
          %td $3,600
          %td Mantenimiento

    %br/
    .row
      .col-md-12
        %h5.no-margin-b.pull-left
          %strong= Invoice.model_name.human(count: 2)
        .ibox-tools.pull-right
          %a.close-link
            %i.fa.fa-plus

    %hr.mnr-md.mnl-md/

    %table.table.table-hover
      %thead
        %tr
          %th{style: "width: 60px;"} Type
          %th Date
          %th Amount
          %th From
      %tbody
        %tr
          %td
            %span.label.label-primary Income
          %td March 1st, 2015
          %td $18,500
          %td Jorge Valdivia
        %tr
          %td
            %span.label.label-warning Expense
          %td March 1st, 2015
          %td $3,600
          %td Mantenimiento
        %tr
          %td
            %span.label.label-primary Income
          %td Feb 1st, 2015
          %td $18,500
          %td Jorge Valdivia
        %tr
          %td
            %span.label.label-warning Expense
          %td Feb 1st, 2015
          %td $3,600
          %td Mantenimiento


