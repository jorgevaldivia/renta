.container-fluid.pt-md
  .row
    .col-md-12
      .panel.panel-primary
        .panel-heading
          .row
            .col-md-6
              .panel-title= Lease.model_name.human(count: 2)
        .table-responsive
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th{:width => "3%"}
                  .checkbox.custom-info.mt-0.mb-0
                    %label
                      %input{:type => "checkbox"}/
                      %span
                %th= Lease.human_attribute_name(:tenant)
                %th= Lease.human_attribute_name(:rent)
                %th= Lease.human_attribute_name(:start_date)
                %th= Lease.human_attribute_name(:end_date)
                %th= Lease.human_attribute_name(:next_bill_date)
            %tbody
              %tr{"ng-repeat" => "record in records"}
                %td
                  .checkbox.custom-info.mt-0.mb-0
                    %label
                      %input{:type => "checkbox"}/
                      %span
                %td Jorge Valdivia (change)
                %td {{ record.rent | number:2 }}
                %td {{ record.start_date }}
                %td {{ record.end_date }}
                %td {{ record.next_bill_date }}

